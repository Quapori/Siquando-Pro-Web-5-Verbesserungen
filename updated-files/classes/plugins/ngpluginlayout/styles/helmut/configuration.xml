<?xml version="1.0" encoding="UTF-8"?>
<configs helpfile="LayoutProHelmut.chm">
	<config type="NGPluginLayoutConfigPicture" id="logo" caption="Logo">
		<aspectratio>RatioUnknown</aspectratio>
		<showlink>false</showlink>
		<showtitle>false</showtitle>
		<showoverride>false</showoverride>
	</config>	
	<config type="NGPluginLayoutConfigPalette" id="palette" caption="Farben">
		<color id="background">Hintergrund</color>
		<color id="nav">Navigation</color>
		<color id="nav.active">Navigation, aktiv</color>
		<color id="nav.hover">Navigation, Maus darüber</color>
		<color id="title">Seitentitel</color>
	</config>	
	<config type="NGPluginLayoutConfigOptions" id="options" caption="Einstellungen">
		<option id="includehome">Startseite in Navigation einschließen</option>
		<slider id="width" min="1000" max="1600" >Gesamtbreite des Layouts</slider>
		<radio id="mainlayout" options="cols=Gleich breite Spalten|sidebars=„Inhalt“ plus schmalere Marginalspalten „Links“ und „Rechts“">Aufteilung „Inhalt“, „Links“ und „Rechts“</radio>
		<string id="title">Titel der Website</string>
	</config>
	<config type="NGPluginLayoutConfigParagraphStreams" id="hiddenstreams" caption="Absatz-Bereiche" />
	<config type="NGPluginLayoutConfigHTML" id="footer" caption="Fußzeile" />
</configs>