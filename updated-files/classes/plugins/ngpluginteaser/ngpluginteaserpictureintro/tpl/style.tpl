.teaserpictureintro>div {
    width: 25%;
    box-sizing: border-box;
    margin: 0;
}

.teaserpictureintropanorama {
    padding: 30px;
}

.teaserpictureintro>ul {
    width: 75%;
    box-sizing: border-box;
    padding: 0;
    margin: 0;
    list-style: none;
}

.teaserpictureintro>ul>li {
    padding: 0;
    display: block;
    float: left;
    box-sizing: border-box;
}

.teaserpictureintroleft>ul {
    float: right;
}

.teaserpictureintroleft>div {
    float: left;
    padding: 0 4% 4% 0;
}

