<?xml version="1.0" encoding="UTF-8"?>
<configs helpfile="LayoutProOrinoco.chm">
	<config type="NGPluginLayoutConfigPicture" id="eyecatcher" caption="Eyecatcher">
		<aspectratio>RatioNone</aspectratio>
		<showlink>false</showlink>
		<showtitle>false</showtitle>
		<showoverride>true</showoverride>
	</config>
	<config type="NGPluginLayoutConfigPicture" id="logo" caption="Logo">
		<aspectratio>RatioNone</aspectratio>
		<showlink>false</showlink>
		<showtitle>false</showtitle>
		<showoverride>false</showoverride>
	</config>

	<config type="NGPluginLayoutConfigPalette" id="palette" caption="Farben">
		<color id="background">Hintergrund</color>
		<color id="background.content">Hintergrund (Inhalt)</color>
		<color id="background.header">Hintergrund (oben)</color>
		<color id="background.footer">Hintergrund (unten)</color>
		<color id="nav.background">Navigation (Hintergrund)</color>
		<color id="nav.background.hover">Navigation (Hintergrund, Maus darüber)</color>
		<color id="nav.color">Navigation (Schrift)</color>
		<color id="nav.color.hover">Navigation (Schrift, Maus darüber)</color>
		<color id="eyecatcher">Elemente im Eyecatcher</color>
		<color id="eyecatcher.hover">Elemente im Eyecatcher (Maus darüber)</color>
		<color id="eyecatcher.background">Eyecatcher (Hintergrundfarbe, wenn kein Bild definiert)</color>
		<color id="footer.background">Fußbereich (Hintergrund)</color>
		<color id="footer.color">Fußbereich (Schrift)</color>
		<color id="footer.weak">Fußbereich (Schrift, schwach)</color>
	</config>
	<config type="NGPluginLayoutConfigOptions" id="options" caption="Einstellungen">
		<slider id="width" min="1200" max="1600" >Gesamtbreite des Layouts</slider>
		<slider id="width.content" min="600" max="900" >Breite des Inhalts</slider>
		<slider id="eyecatcher" min="0" max="100">Helligkeit Eyecatcher</slider>
		<radio id="mainlayout" options="cols=Gleich breite Spalten|sidebars=„Inhalt“ plus schmalere Marginalspalten „Links“ und „Rechts“">Aufteilung „Inhalt“, „Links“ und „Rechts“</radio>
		<option id="breadcrumbs">„Sie sind hier“-Navigation darstellen</option>
		<option id="userscalable">Skalierung durch Benutzer auf Smartphone zulassen</option>
		<option id="navpictures">Bilder für Navigationspunkte der 1. Ebene zeigen</option>
		<cropratio id="cropratio">Bildformat der Navigationsbilder</cropratio>
		<combo id="commonnavhierarchical" options="page=Seiten|topic=Ordner und Seiten|dual=Ordner und Seiten plus Seiten">Navigationsstil „Allgemeine Seiten“</combo>
		<string id="res.menu">Beschriftung „Menü“</string>
		<string id="res.search">Beschriftung „Suchen“</string>
	</config>
	<config type="NGPluginLayoutConfigOptions" id="contact" caption="Kontakt">
		<email id="email">E-Mail-Adresse</email>
		<url id="facebook">Facebook</url>
		<url id="twitter">Twitter</url>
		<url id="linkedin">LinkedIn</url>
		<url id="xing">Xing</url>
		<url id="instagram">Instagram</url>
		<url id="youtube">YouTube</url>
		<url id="pinterest" info="Wenn Sie Links auf die aufgeführten sozialen Netzwerke setzen, werden unter Umständen Marken der Netzwerke auf Ihrer Website platziert. Bitte beachten Sie deren Nutzungsbedingungen.">Pinterest</url>
	</config>
	<config type="NGPluginLayoutConfigParagraphStreams" id="hiddenstreams" caption="Absatz-Bereiche" />
	<config type="NGPluginLayoutConfigHTML" id="footer" caption="Fußzeile" />
</configs>