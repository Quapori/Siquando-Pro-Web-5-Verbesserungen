<?xml version="1.0" encoding="UTF-8"?>
<configs helpfile="LayoutProCetera.chm">
	<config type="NGPluginLayoutConfigPicture" id="eyecatcher" caption="Eyecatcher">
		<aspectratio>Ratio3by1</aspectratio>
		<showlink>false</showlink>
		<showtitle>false</showtitle>
		<showoverride>true</showoverride>
	</config>
    <config type="NGPluginLayoutConfigPicture" id="logo" caption="Logo">
        <aspectratio>RatioUnknown</aspectratio>
        <showlink>false</showlink>
        <showtitle>false</showtitle>
        <showoverride>false</showoverride>
    </config>
	<config type="NGPluginLayoutConfigPalette" id="palette" caption="Farben">
		<color id="background">Hintergrund, Seite</color>
		<color id="contentbackground">Hintergrund, Inhalt</color>
		<color id="boxborder">Rahmenfarbe</color>
		<color id="breadcrumbs">„Sie sind hier“-Links</color>
		<color id="breadcrumbs.hover">„Sie sind hier“-Links, Maus darüber</color>
		<color id="contact">Kontakt-Links</color>
